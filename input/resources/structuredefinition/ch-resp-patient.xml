<?xml version="1.0" encoding="UTF-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
    <id value="ch-resp-patient"/>
    <url value="http://fhir.ch/ig/ch-resp/StructureDefinition/ch-resp-patient"/>
    <version value="0.1.0"/>
    <name value="CHRespPatient"/>
    <title value="CH RESP Patient Profile"/>
    <status value="draft"/>
    <date value="2020-02-05T00:00:00+10:00"/>
    <publisher value="eCH Fachgruppe eHealth"/>
    <contact>
        <name value="eCH Fachgruppe eHealth"/>
        <telecom>
            <system value="url"/>
            <value value="https://www.ech.ch/de/node/36373/"/>
        </telecom>
    </contact>
    <description value="Definition of the patient for the use of the rescue protection protocol"/>
    <jurisdiction>
        <coding>
            <system value="urn:iso:std:iso:3166"/>
            <code value="CH"/>
        </coding>
    </jurisdiction>
    <fhirVersion value="4.0.1" />
    <kind value="resource"/>
    <abstract value="false"/>
    <type value="Patient"/>
    <baseDefinition value="http://fhir.ch/ig/ch-core/StructureDefinition/ch-core-patient"/>
    <derivation value="constraint"/>
    <differential>
        <element id="Patient">
            <path value="Patient"/>
            <short value="CH RESP Patient"/>
        </element>
        <element id="Patient.extension">
            <path value="Patient.extension" />
            <slicing>
                <discriminator>
                    <type value="value"/>
                    <path value="url"/>
                </discriminator>
                <rules value="open"/>
            </slicing>
        </element>
        <element id="Patient.extension:placeOfOrigin">
            <path value="Patient.extension"/>
            <sliceName value="placeOfOrigin"/>
            <short value="Place of origin of patient"/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="Patient.extension:citizenship">
            <path value="Patient.extension" />
            <sliceName value="citizenship" />
            <short value="Citizenship of patient"/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="Patient.identifier">
            <path value="Patient.identifier" />
            <slicing>
                <discriminator>
                    <type value="pattern" />
                    <path value="$this" />
                </discriminator>
                <rules value="open" />
            </slicing>
        </element>
        <element id="Patient.identifier:AHVN13">
            <path value="Patient.identifier"/>
            <sliceName value="AHVN13"/>
            <short value="AHVN13 / NAVS13"/>
            <patternIdentifier>
                <system value="urn:oid:2.16.756.5.32" />
            </patternIdentifier>
        </element>
        <element id="Patient.identifier.value:AHVN13">
            <path value="Patient.identifier.value"/>
            <short value="AHVN13 / NAVS13 of the patient (13 digits starting with 756)"/>
        </element>
        <element id="Patient.identifier:InsuranceCardNumber">
            <path value="Patient.identifier"/>
            <sliceName value="InsuranceCardNumber"/>
            <short value="Insurance card number for this patient"/>
            <min value="0"/>
            <max value="1"/>
            <patternIdentifier>
                <system value="urn:oid:2.16.756.5.30.1.123.100.1.1.1" />
            </patternIdentifier> 
        </element>
        <element id="Patient.identifier.value:InsuranceCardNumber">
            <path value="Patient.identifier.value"/>
            <short value="Insurance card number"/>
        </element>
        <element id="Patient.identifier:PLSId">
            <path value="Patient.identifier" />
            <sliceName value="PLSId" />
            <short value="Number of the patient from the patient guidance system (PLS) for the temporary identification" />
            <min value="0" />
            <max value="1" />
            <patternIdentifier>
                <system value="urn:oid:2.16.756.5.30.1.143.20" />
            </patternIdentifier>
        </element>
        <element id="Patient.identifier.value:PLSId">
            <path value="Patient.identifier.value" />
            <short value="PLS-ID"/>
        </element>
        <element id="Patient.name">
            <path value="Patient.name"/>
            <short value="The patient's official name"/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="Patient.name.family">
            <path value="Patient.name.family"/>
            <min value="1"/>
        </element>
        <element id="Patient.name.given">
            <path value="Patient.name.given"/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="Patient.gender">
            <path value="Patient.gender"/>
            <short value="male | female | unknown"/>
            <!-- TBD: CH-Core: male, female, other-->
            <min value="1"/>
        </element>
        <element id="Patient.birthDate">
            <path value="Patient.birthDate"/>
            <short value="The date of birth for the individual"/>
            <min value="1"/>
        </element>
    </differential>
</StructureDefinition>